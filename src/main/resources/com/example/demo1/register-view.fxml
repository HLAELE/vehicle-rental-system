<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="10" style="-fx-background-color: ivory;" stylesheets="@style.css" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/20.0.2" fx:controller="com.example.demo1.RegisterController">

    <Label style="-fx-font-size: 24px; -fx-font-weight: bold;" text="Register" />

    <TextField fx:id="nameField" prefWidth="250" promptText="First Name" />
    <TextField fx:id="surnameField" prefWidth="250" promptText="Last Name" />
    <TextField fx:id="emailField" prefWidth="250" promptText="Email" />
    <PasswordField fx:id="passwordField" prefWidth="250" promptText="Password" />

    <ComboBox fx:id="roleComboBox" prefWidth="250" promptText="Select Role" />

    <Button onAction="#onRegisterClick" prefWidth="250" text="Register" />

    <Hyperlink onAction="#onLoginLinkClick" text="Already have an account? Login" />

</VBox>
